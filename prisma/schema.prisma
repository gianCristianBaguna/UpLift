generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "linux-musl"]
  output        = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id                String   @id @default(cuid()) @map("_id")
  image             String
  imagePublicId     String
  title             String
  date              DateTime
  time              String
  location          String
  attendees         Int
  category          String
  description       String
  impact            String
  volunteerServices String[]
}

model Service {
  id          String @id @default(cuid()) @map("_id")
  serviceName String @unique
}

model Volunteer {
  id            String   @id @default(cuid()) @map("_id")
  name          String
  sex           String
  birthday      DateTime
  civilStatus   String
  address       String
  occupation    String
  contactNumber String
  email         String
  skills        String[]
}
